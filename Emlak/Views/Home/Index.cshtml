@model IEnumerable<Emlak.Models.Ilan>
@{
    ViewBag.Title = "Index";
}

<div class="overlay">
    <div class="container">
        <div class="row mainContent">
            <div class="col-md-12">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active"
                                id="home-tab"
                                data-bs-toggle="tab"
                                data-bs-target="#home"
                                type="button"
                                role="tab"
                                aria-controls="home"
                                aria-selected="true">
                            SATILIK
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link"
                                id="profile-tab"
                                data-bs-toggle="tab"
                                data-bs-target="#profile"
                                type="button"
                                role="tab"
                                aria-controls="profile"
                                aria-selected="false">
                            KİRALIK
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link"
                                id="contact-tab"
                                data-bs-toggle="tab"
                                data-bs-target="#contact"
                                type="button"
                                role="tab"
                                aria-controls="contact"
                                aria-selected="false">
                            PROJELER
                        </button>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active"
                         id="home"
                         role="tabpanel"
                         aria-labelledby="home-tab">
                        <div class="search">
                            <div class="container-fluid">
                                <form class="d-flex">
                                    <input class="form-control"
                                           type="search"
                                           placeholder="Satılık Ara"
                                           aria-label="SATILIK ARA"
                                           style="width: 90%" />
                                    <button class="btn btn-primary" type="button">
                                        <i class="fa fa-search"></i> | ARA
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade"
                         id="profile"
                         role="tabpanel"
                         aria-labelledby="profile-tab">
                        <div class="search">
                            <div class="container-fluid">
                                <form class="d-flex">
                                    <input class="form-control"
                                           type="search"
                                           placeholder="Kiralık Ara"
                                           aria-label="KİRALIK ARA"
                                           style="width: 90%" />
                                    <button class="btn btn-primary" type="button">
                                        <i class="fa fa-search"></i> | ARA
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade"
                         id="contact"
                         role="tabpanel"
                         aria-labelledby="contact-tab">
                        <div class="search">
                            <div class="container-fluid">
                                <form class="d-flex">
                                    <input class="form-control"
                                           type="search"
                                           placeholder="Proje Ara"
                                           aria-label="PROJE ARA"
                                           style="width: 90%" />
                                    <button class="btn btn-primary" type="button">
                                        <i class="fa fa-search"></i> | ARA
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container">


    <!--FİLTRELEME KISMI-->
    <div class="row mt-3 ">
        <div class="col-md-3">
            <form class="form-horizontal">
                <div class="form-group row mb-3">
                    <label for="inputEnaz" class="col-sm-3  control-label">En Az</label>
                    <div class="col-sm-7 ">
                        <input type="text" class="form-control" placeholder="En Az (Fiyat)">
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label for="inputEncok" class="col-sm-3 control-label">En Çok</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" placeholder="En Çok (Fiyat)" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label for="inputSehir" class="col-sm-3 control-label">Şehir</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" placeholder="Şehir" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label for="inputSemt" class="col-sm-3 control-label">Semt</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" placeholder="Semt" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label for="inputMahalle" class="col-sm-3 control-label">Mahalle</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" placeholder="Mahalle" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label for="inputDurum" class="col-sm-3 control-label">Durum</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" placeholder="Durum" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label for="inputTip" class="col-sm-3 control-label">Tip</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" placeholder="Tip" />
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="inputTip" class="col-sm-3 control-label"></label>
                    <div class="col-sm-7">
                        <button type="submit" class="btn btn-primary" style="width:100%"><i class="fas fa-filter"></i> |  Filtrele</button>
                    </div>
                </div>
            </form>
        </div>

        <!--İLAN KISMI-->
        <br />
        @foreach (var item in Model)
        {
            <div class="card col-md-3 mx-2">
                <img src="../Content/images/ilanlar/kiralık/1/x5_907568749h5m.jpg" />
                <div class="caption">
                    <p><strong>İLAN DURUMU</strong> (@item.Tip.TipAd)</p>
                    <p>AÇIKLAMA</p>
                    <p>ŞEHİR-İLÇE</p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end my-3">
                        <button class="btn btn-danger me-md-2" type="button">FİYAT</button>
                        <button class="btn btn-primary me-md-2" type="button">ALAN M<sup>2</sup></button>
                        <button class="btn btn-success me-md-2" type="button">ODA</button>
                    </div>
                </div>
            </div>
        }











    </div>

    
</div>